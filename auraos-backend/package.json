
{
  "name": "auraos-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend for AuraOS - The AI Platform for Architecture & Vastu",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon",
    "set-owner": "node scripts/set-owner.js",
    "seed-users": "node scripts/seed-users.js",
    "generate-docs": "node scripts/generate-swagger-json.js",
    "test": "jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --reporters='default' --reporters='jest-junit'",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "migrate": "node scripts/migrate-db.js",
    "deploy": "npm run test:ci && npm run migrate && npm run start"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/config/**",
      "!src/**/*.d.ts",
      "!src/scripts/**"
    ],
    "testEnvironment": "node"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^1.14.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dxf-parser": "^1.1.2",
    "dxf-writer": "^1.18.4",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.1",
    "multer": "^2.0.0-rc.4",
    "prom-client": "^15.1.0",
    "razorpay": "^2.9.4",
    "socket.io": "^4.7.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.1.4",
    "socket.io-client": "^4.7.5",
    "supertest": "^6.3.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  }
}